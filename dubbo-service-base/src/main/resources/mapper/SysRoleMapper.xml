<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fanyao.service.base.system.mapper.SysRoleMapper">

    <resultMap id="RoleCommonResult" type="com.fanyao.api.base.system.entity.SysRole">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="role_alias" property="roleAlias"/>
        <result column="role_name" property="roleName"/>
        <result column="seq" property="seq"/>
        <result column="parent_id" property="parentId"/>
    </resultMap>

    <select id="listSysRoleByMenuUrl" resultMap="RoleCommonResult">
        select u.id         id,
               u.create_time,
               u.modify_time,
               u.password,
               u.user_name,
               u.login_name,
               r.id         rid,
               r.role_alias rAlias,
               r.role_name  rName
        from t_sys_user u,
             t_sys_role r,
             t_sys_user_role ur
        where u.id = ur.user_id
          and r.id = ur.role_id
          and u.id = #{userId,jdbcType=INTEGER}
    </select>

</mapper>